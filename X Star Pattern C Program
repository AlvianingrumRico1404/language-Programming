#include <stdio.h>
#include <conio.h>
 
int main()
{
    int i,j,n,k;
    char ch;
 
    printf("Enter number of rows: ");
    scanf("%d%c",&n,&ch);
    printf("Enter the symbol: ");
    ch=getchar();
    k=n*2-1;
 
	for(i=1;i<=k;i++)
   {
        for(j=1;j<=k;j++)
        {      
		    if(j==i || j==k-i+1)
                printf("%c",ch);
                           
			printf(" ");
                                 
		 
        }
		 
    
        printf("\n");
         }            
           
 
 
    return 0;
}
